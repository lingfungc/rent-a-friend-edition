<%# navbar css classes from bootstrap framework %>
<div class="navbar navbar-expand-sm">

  <div class="navbar-container">

    <%# logo %>
    <%= link_to "/", class: "" do %>
      <%= image_tag "Rent A Friend Logo", class: "navbar-logo" %>
    <% end %>

    <%# hamburger menu of search field and login btn for small screen from bootstrap framework %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <%# figure out the functionality later %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">

      <%# search field %>
      <div class="search-container" data-controller="search-field">
        <div class="search-btn-a">
          <i class="fas fa-search"></i>
        </div>
        <div class="cancel-btn">
          <i class="fas fa-times"></i>
        </div>
        <%= form_with url: friends_path, method: :get, class: "search-box" do %>
          <%= text_field_tag :query,
            params[:query],
            class: "search-input",
            placeholder: "Find a friend"
          %>
          <%= submit_tag "Search", class: "fas fa-search search-hide" %>
        <% end %>
      </div>

      </ul>
    </div>

  </div>

</div>
