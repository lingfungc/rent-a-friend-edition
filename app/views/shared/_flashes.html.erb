<div class="flash-container">
  <% if flash.any? %>
      <% flash.each do |type, msg| %>
        <% if msg.class == Array && msg.count > 1 %>
          <% msg.each do |m| %>
            <div class="alert-f alert-<%= type %>">
              <%= m %>
            </div>
          <% end %>
        <% else %>
          <% unless type.nil? %>
            <div class="alert-f alert-<%= type %>">
              <%= msg %>
            </div>
          <% else %>
            <div class="alert-f alert-primary">
              <%= msg %>
            </div>
          <% end %>
        <% end %>
      <% end %>
  <% end %>
</div>
