<div class="home-container">

  <section aria-label="background-slideshow">
    <div class="carousel" data-controller="landing-page-sliders" data-carousel>
      <button class="carousel-button prev" data-carousel-button="prev">&#10094;</button>
      <button class="carousel-button next" data-carousel-button="next">&#10095;</button>
      <ul data-slides>
        <li class="slide" data-active>
          <%= image_tag "Concert 2.jpg" %>
        </li>
        <li class="slide">
          <%= image_tag "Mates.jpg" %>
        </li>
        <li class="slide">
          <%= image_tag "Share Feeling.jpg" %>
        </li>
        <li class="slide">
          <%= image_tag "Become A Friend.jpg" %>
        </li>
      </ul>
    </div>
  </section>

  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1564590325500-35fd32a51fac?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3552&q=80);">
    <div class="container">
      <h1><em>Welcome to Rent-A-Friend</em></h1>
      <br>
      <p>Rent a friend or be a friend.</p>
      <%= link_to "Start here", "friends#index", class: "btn btn-ghost" %>
    </div>
  </div>

</div>
