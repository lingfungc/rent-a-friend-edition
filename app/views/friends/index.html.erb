<div class="space">

  <%# <h1 class="index_title">Available Friends</h1> %>

  <div class="container filter-opt">

      <div class="search-container" data-controller="">
        <%= form_with url: friends_path, method: :get, class: "search-box active" do %>
          <%= text_field_tag :categories,
            params[:query],
            class: "search-input active",
            placeholder: "Find a friend",
            required: true
          %>
          <%# <%= submit_tag "Search", class: "search-btn-query" %>
          <div class="search-btn-query">
            <%= button_tag :submit do %>
              <i class="fas fa-search"></i>
            <% end %>
          </div>
        <% end %>
      </div>
  </div>

  <div class="container d-none">
    <h1>Show map</h1>
    <div style="width: 100%; height: 300px;" class="mappy" data-controller="map" data-map-markers-value="<%= @markers.to_json %>" data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>

  <div class="container">
    <div class="cards">
      <% @friends.each do |f| %>
        <div class="card-trip">
          <h5 class="first-name"><%= f.first_name %></h5>

            <div class="flip-card">
              <div class="flip-card-inner">
                <div class="friend-index-pic flip-card-front">
                <% if f.photo.attached? %>
                  <a href="/friends/<%= f.id %>"><%= cl_image_tag f.photo.key, class: 'cl_img' %></a>
                <% end %>
                </div>
              </div>
            </div>

            <div class="card-trip-infos">
              <div>
                <%# Comment: Added random reviews %>
                <h2><%= '⭐️' * f.rating %></h2>
              </div>
              <h2 class="card-trip-pricing">£ <%= f.daily_rate %>/day</h2>
            </div>
        </div>
      <% end %>
    </div>

  </div>

</div>
