        <div class="card-trip-infos">
          <div>
            <h2><%= f.first_name %></h2>
            <p class="see-more"><%= link_to "See more?", friend_path(f) %></p>
          </div>
          <h2 class="card-trip-pricing">Â£ <%= f.daily_rate %> per day</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>
