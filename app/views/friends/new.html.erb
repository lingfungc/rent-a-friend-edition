<h1 class="new-title">Become a Friend</h1>

<div class="container">
  <%= simple_form_for(@friend) do |x| %>
  <%= x.input :first_name, label: "First Name:" %>
  <%= x.input :last_name, label: "Last Name:" %>
  <%= x.input :age, collection: 18..100 %>
  <%= x.input :location, label: "Hometown:" %>
  <%= x.input :pronouns, label: "Preferred Pronouns:", placeholder: "  /  " %>
  <%= x.input :categories, collection: @categories, include_hidden: false, label: "Friend capacity CHANGE THIS" %>
  <%= x.input :bio, placeholder: "Write a little bit about yourself..." %>
  <%= x.input :photo, as: :file %>
  <%= x.input :daily_rate, label: "How much do you want to charge per day?", as: :float , placeholder: "Â£" %>
  <%= x.submit "Submit ðŸ˜Ž" %>
  <% end %>
</div>

